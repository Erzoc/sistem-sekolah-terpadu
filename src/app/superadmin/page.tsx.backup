import { getServerSession } from 'next-auth';
import { authOptions } from '@/lib/auth/auth';
import { db } from '@/database/client';
import { usersTable } from '@/schemas/users';
import { schoolProfilesTable } from '@/schemas/school_profiles';
import { tenantsTable } from '@/schemas/tenants';
import { eq, sql } from 'drizzle-orm';
import { Users, Shield, Building2, Activity, School, MapPin, User, Hash, Phone, Mail, CheckCircle2, AlertCircle } from 'lucide-react';
import Link from 'next/link';

export default async function SuperAdminDashboard() {
  const session = await getServerSession(authOptions);

  // Fetch stats
  const totalUsers = await db.select({ count: sql<number>`count(*)` }).from(usersTable);
  const guruCount = await db.select({ count: sql<number>`count(*)` }).from(usersTable).where(eq(usersTable.role, 'guru'));
  const adminCount = await db.select({ count: sql<number>`count(*)` }).from(usersTable).where(eq(usersTable.role, 'admin_sekolah'));

  // Fetch ALL school profiles with tenant info (for multi-tenant support)
  const schoolProfiles = await db
    .select({
      profile: schoolProfilesTable,
      tenant: tenantsTable,
    })
    .from(schoolProfilesTable)
    .leftJoin(tenantsTable, eq(schoolProfilesTable.tenantId, tenantsTable.tenantId))
    .orderBy(schoolProfilesTable.createdAt);

  // Current user's profile
  const currentProfile = schoolProfiles.find(
    (p) => p.profile.tenantId === session?.user?.tenantId
  );

  const stats = [
    {
      label: 'Total Users',
      value: totalUsers[0]?.count?.toString() || '0',
      icon: Users,
      color: 'purple',
      change: '+12% from last month'
    },
    {
      label: 'Guru Accounts',
      value: guruCount[0]?.count?.toString() || '0',
      icon: Shield,
      color: 'emerald',
      change: '+8% this week'
    },
    {
      label: 'School Admins',
      value: adminCount[0]?.count?.toString() || '0',
      icon: Building2,
      color: 'blue',
      change: '+3 new this month'
    },
    {
      label: 'Total Schools',
      value: schoolProfiles.length.toString(),
      icon: Activity,
      color: 'orange',
      change: `${schoolProfiles.filter(p => p.profile.isActive).length} active`
    },
  ];

  return (
    <div className="space-y-6">
      {/* Welcome */}
      <div>
        <h1 className="text-3xl font-bold text-slate-900">
          Welcome back, {session?.user?.name} ðŸ‘‹
        </h1>
        <p className="text-slate-600 mt-1">Platform overview and system metrics</p>
      </div>

      {/* Stats Grid */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {stats.map((stat) => {
          const Icon = stat.icon;
          const colorClasses = {
            purple: 'bg-purple-50 text-purple-600',
            emerald: 'bg-emerald-50 text-emerald-600',
            blue: 'bg-blue-50 text-blue-600',
            orange: 'bg-orange-50 text-orange-600',
          };

          return (
            <div
              key={stat.label}
              className="bg-white rounded-xl p-6 border border-slate-200 shadow-sm hover:shadow-md transition-shadow"
            >
              <div className={`p-3 rounded-xl ${colorClasses[stat.color as keyof typeof colorClasses]} inline-flex`}>
                <Icon className="w-6 h-6" />
              </div>
              <div className="mt-4">
                <p className="text-sm text-slate-600">{stat.label}</p>
                <p className="text-3xl font-bold text-slate-900 mt-1">{stat.value}</p>
                <p className="text-xs text-slate-500 mt-2">{stat.change}</p>
              </div>
            </div>
          );
        })}
      </div>

      {/* âœ… SPLIT LAYOUT: School Profiles */}
      <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
        {/* LEFT: List of School Profiles */}
        <div className="lg:col-span-2 space-y-4">
          <div className="flex items-center justify-between">
            <h2 className="text-xl font-bold text-slate-900">School Profiles</h2>
            <Link
              href="/superadmin/setup-sekolah"
              className="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors"
            >
              + Add New
            </Link>
          </div>

          <div className="space-y-3 max-h-[600px] overflow-y-auto pr-2">
            {schoolProfiles.length > 0 ? (
              schoolProfiles.map(({ profile, tenant }) => (
                <div
                  key={profile.profileId}
                  className={`bg-white rounded-lg border-2 p-4 hover:shadow-md transition-all cursor-pointer ${
                    profile.tenantId === session?.user?.tenantId
                      ? 'border-blue-500 bg-blue-50/30'
                      : 'border-slate-200 hover:border-blue-300'
                  }`}
                >
                  <div className="flex items-start justify-between">
                    <div className="flex items-start gap-3 flex-1">
                      <div className={`mt-1 p-2.5 rounded-lg ${profile.isActive ? 'bg-green-100' : 'bg-gray-100'}`}>
                        <School className={`w-5 h-5 ${profile.isActive ? 'text-green-600' : 'text-gray-500'}`} />
                      </div>
                      <div className="flex-1 min-w-0">
                        <div className="flex items-center gap-2 mb-1">
                          <h3 className="font-bold text-slate-900 truncate">
                            {profile.schoolName}
                          </h3>
                          {profile.tenantId === session?.user?.tenantId && (
                            <span className="px-2 py-0.5 bg-blue-100 text-blue-700 text-xs font-medium rounded">
                              Your School
                            </span>
                          )}
                        </div>
                        <div className="flex flex-wrap items-center gap-3 text-xs text-slate-600">
                          <span className="flex items-center gap-1">
                            <Hash className="w-3 h-3" />
                            {profile.npsn || 'No NPSN'}
                          </span>
                          {tenant && (
                            <span className="flex items-center gap-1">
                              <Building2 className="w-3 h-3" />
                              {tenant.city}
                            </span>
                          )}
                        </div>
                      </div>
                    </div>
                    <div className={`px-2.5 py-1 rounded-full text-xs font-medium ${
                      profile.isActive 
                        ? 'bg-green-100 text-green-700' 
                        : 'bg-gray-100 text-gray-600'
                    }`}>
                      {profile.isActive ? 'Active' : 'Inactive'}
                    </div>
                  </div>
                </div>
              ))
            ) : (
              <div className="text-center py-12 bg-slate-50 rounded-lg border-2 border-dashed border-slate-300">
                <School className="w-12 h-12 text-slate-400 mx-auto mb-3" />
                <h3 className="font-semibold text-slate-700 mb-1">No School Profiles</h3>
                <p className="text-sm text-slate-500 mb-4">Create your first school profile</p>
                <Link
                  href="/superadmin/setup-sekolah"
                  className="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg"
                >
                  <School className="w-4 h-4" />
                  Setup School Profile
                </Link>
              </div>
            )}
          </div>
        </div>

        {/* RIGHT: Current School Detail Preview */}
        <div className="lg:col-span-1">
          <div className="sticky top-6">
            <h3 className="text-lg font-bold text-slate-900 mb-4">Your School Detail</h3>
            
            {currentProfile ? (
              <div className="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl border border-blue-200 overflow-hidden">
                {/* Header */}
                <div className="bg-gradient-to-r from-blue-600 to-indigo-600 px-5 py-4">
                  <div className="flex items-center gap-3">
                    <div className="p-2 bg-white/20 backdrop-blur-sm rounded-lg">
                      <School className="w-5 h-5 text-white" />
                    </div>
                    <div className="flex-1">
                      <p className="text-xs text-blue-100 mb-0.5">School Profile</p>
                      <h4 className="font-bold text-white text-sm truncate">
                        {currentProfile.profile.schoolName}
                      </h4>
                    </div>
                    {currentProfile.profile.isActive ? (
                      <CheckCircle2 className="w-5 h-5 text-green-300" />
                    ) : (
                      <AlertCircle className="w-5 h-5 text-orange-300" />
                    )}
                  </div>
                </div>

                {/* Details */}
                <div className="p-5 space-y-4">
                  <div className="flex items-start gap-3">
                    <Hash className="w-4 h-4 text-blue-600 mt-0.5" />
                    <div className="flex-1 min-w-0">
                      <p className="text-xs text-slate-500 uppercase tracking-wide mb-0.5">NPSN</p>
                      <p className="text-sm font-semibold text-slate-900">{currentProfile.profile.npsn || '-'}</p>
                    </div>
                  </div>

                  <div className="flex items-start gap-3">
                    <User className="w-4 h-4 text-purple-600 mt-0.5" />
                    <div className="flex-1 min-w-0">
                      <p className="text-xs text-slate-500 uppercase tracking-wide mb-0.5">Kepala Sekolah</p>
                      <p className="text-sm font-semibold text-slate-900 truncate">
                        {currentProfile.profile.principalName || 'Belum diisi'}
                      </p>
                    </div>
                  </div>

                  <div className="flex items-start gap-3">
                    <MapPin className="w-4 h-4 text-orange-600 mt-0.5" />
                    <div className="flex-1 min-w-0">
                      <p className="text-xs text-slate-500 uppercase tracking-wide mb-0.5">Alamat</p>
                      <p className="text-xs text-slate-700 leading-relaxed line-clamp-2">
                        {currentProfile.profile.schoolAddress || 'Belum diisi'}
                      </p>
                    </div>
                  </div>

                  {currentProfile.profile.schoolPhone && (
                    <div className="flex items-start gap-3">
                      <Phone className="w-4 h-4 text-green-600 mt-0.5" />
                      <div className="flex-1 min-w-0">
                        <p className="text-xs text-slate-500 uppercase tracking-wide mb-0.5">Telepon</p>
                        <p className="text-sm font-semibold text-slate-900">{currentProfile.profile.schoolPhone}</p>
                      </div>
                    </div>
                  )}

                  {currentProfile.profile.schoolEmail && (
                    <div className="flex items-start gap-3">
                      <Mail className="w-4 h-4 text-blue-600 mt-0.5" />
                      <div className="flex-1 min-w-0">
                        <p className="text-xs text-slate-500 uppercase tracking-wide mb-0.5">Email</p>
                        <p className="text-xs font-semibold text-slate-900 truncate">
                          {currentProfile.profile.schoolEmail}
                        </p>
                      </div>
                    </div>
                  )}

                  <div className="pt-4 border-t border-blue-200">
                    <Link
                      href="/superadmin/setup-sekolah"
                      className="block w-full text-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors"
                    >
                      Edit Profile
                    </Link>
                  </div>
                </div>
              </div>
            ) : (
              <div className="bg-slate-50 rounded-xl border-2 border-dashed border-slate-300 p-8 text-center">
                <AlertCircle className="w-10 h-10 text-slate-400 mx-auto mb-3" />
                <h4 className="font-semibold text-slate-700 mb-2">Not Configured</h4>
                <p className="text-sm text-slate-500 mb-4">Setup your school profile to see details here</p>
                <Link
                  href="/superadmin/setup-sekolah"
                  className="inline-block px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg"
                >
                  Setup Now
                </Link>
              </div>
            )}
          </div>
        </div>
      </div>

      {/* Quick Actions */}
      <div className="bg-white rounded-xl p-6 border border-slate-200 shadow-sm">
        <h2 className="text-xl font-bold text-slate-900 mb-4">Quick Actions</h2>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <Link
            href="/superadmin/users"
            className="p-4 border border-slate-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 transition-colors"
          >
            <h3 className="font-semibold text-slate-900">Manage Users</h3>
            <p className="text-sm text-slate-600 mt-1">View & edit all users</p>
          </Link>
          <Link
            href="/superadmin/tenants"
            className="p-4 border border-slate-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 transition-colors"
          >
            <h3 className="font-semibold text-slate-900">Tenants</h3>
            <p className="text-sm text-slate-600 mt-1">School organizations</p>
          </Link>
          <Link
            href="/superadmin/settings"
            className="p-4 border border-slate-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 transition-colors"
          >
            <h3 className="font-semibold text-slate-900">Settings</h3>
            <p className="text-sm text-slate-600 mt-1">System configuration</p>
          </Link>
        </div>
      </div>
    </div>
  );
}
